<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">
        <!-- Added TextView for the message prompt -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Message Here"
            android:textSize="20sp"
            android:fontFamily="@font/lexend_medium"
            android:textColor="@color/DarkGray"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/titleTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_marginTop="20dp"
            android:autofillHints="message"
            android:elevation="80dp"
            app:hintTextColor="@color/DarkGray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/messageField"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:drawablePadding="15dp"
                android:fontFamily="@font/lexend_medium"
                android:hint="Message Here"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="6dp"
                android:paddingVertical="25dp"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                app:hintTextColor="@color/DarkGray" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/categoryTextInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID-Name To."
            app:helperTextTextColor="@color/redpink"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:id="@+id/idFrom"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/lexend_medium"
                android:editable="true" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="end">

            <Button
                android:id="@+id/clear_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:fontFamily="@font/lexend_medium"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/send_button"
                android:layout_width="wrap_content"
                android:fontFamily="@font/lexend_medium"
                android:layout_height="wrap_content"
                android:text="Send" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
